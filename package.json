{
  "name": "web-extension-starter",
  "version": "1.0.0",
  "description": "A web browser extension starter - based on Typescript, React, Redux, Styled-Component, Webpack, and more. Runs on Chrome and Firefox.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack",
    "prod": "cross-env NODE_ENV=production webpack",
    "watch": "webpack -w",
    "clean": "rimraf ./chrome/dist",
    "clean:all": "yarn clean && rimraf ./coverage && rimraf ./node_modules",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "tsc": "tsc",
    "lint": "eslint src/**/*.ts* tests/**/*.test.ts* jest.config.js webpack.config.js --cache",
    "prettier": "prettier  --ignore-path ./.prettierignore  **/*.ts* **/*.js*",
    "fix": "yarn prettier --write && yarn lint --fix",
    "check-rule": "yarn tsc && yarn lint && yarn prettier && yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.95",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^4.4.3",
    "@types/webpack": "^4.41.6",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.3",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-extension-reloader": "^1.1.4"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.0.1"
  }
}
